<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_color">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

        <TableRow
            android:onClick="akwadrat"
            android:layout_marginTop="10dp">
            <ImageView
                android:id = "@+id/kwadrat"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src = "@drawable/kwadrat"
                />

            <TextView
                android:id = "@+id/textView1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pole kwadratu"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                />
        </TableRow>

        <TableRow
            android:onClick="aprostokat"
            android:layout_marginTop="10dp">
            <ImageView
                android:id = "@+id/prostokat"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src = "@drawable/prostokat"
                />

            <TextView
                android:id = "@+id/textView2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pole prostokąta"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                />
        </TableRow>

        <TableRow
            android:onClick="akolo"
            android:layout_marginTop="10dp">
            <ImageView
                android:id = "@+id/kolo"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src = "@drawable/kolo"
                />

            <TextView
                android:id = "@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pole koła"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                />
        </TableRow>

        <TableRow android:onClick="atrojkat"
            android:layout_marginTop="10dp">
            <ImageView
                android:id = "@+id/trojkat"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src = "@drawable/trojkat"
                />

            <TextView
                android:id = "@+id/textView5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pole trójkąta"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                />
        </TableRow>

    </TableLayout>
</RelativeLayout>
